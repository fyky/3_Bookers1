<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to "show", book_path(book) %>
         <%= link_to "edit", edit_book_path(book) %>
          <%= link_to "destroy",  book_path(book), method: :delete %>
      </td>
    </tr>
  <% end %>
</table>

<h2>New book</h2>
  <p>
    <%= form_with model:Book.new, local:true do |f| %>
  </p>
    <p>Title<br>
      <%= f.text_field :title %>
    </p>
    <p>Body<br>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit 'create book' %>
    </p>
  <% end %>